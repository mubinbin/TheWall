@{
    Layout = null;
}

@model TheWall.Models.Message

<form id="edit-mes-form" method="POST" autocomplete="off" onsubmit="return mespost(this);" asp-controller="Home" asp-action="ProcessEditMessage">
    <div class="form-group">
        <p><span class="text-danger" asp-validation-for="MessageContent"></span></p>
        <textarea class="form-control" rows="4" id="mes-text" asp-for="MessageContent"></textarea>
    </div>
    <input type="hidden" asp-for="MessageId" value = "@ViewBag.curMessage.MessageId">
    <input type="hidden" asp-for="UserId" value = "@ViewBag.curuser.UserId">

    
    <input class="btn btn-primary w-100" type="submit" value="Post">
</form>
