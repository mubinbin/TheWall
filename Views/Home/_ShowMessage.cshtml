@model List<Message>
@{
        foreach(Message m in Model)
        {
            <div class="p-3 font-weight-bold text-primary">@m.Creator.Name - @m.UpdatedAt
            </div>
            <div class="p-4">@m.MessageContent</div>
            if(m.Creator == ViewBag.curuser)
            {
                <div>
                    <a class="btn btn-success" href="">Edit</a>
                    <a class="btn btn-danger" href="">Delete</a>
                </div>
            }
            foreach(Comment c in m.CommentsForMessage){
                <div class="p-5 font-weight-bold text-primary">@c.Creator.Name - @c.UpdatedAt</div>
                <div class="p-5">@c.CommentContent</div>
                if(c.Creator == ViewBag.curuser)
                {
                    <div>
                        <a class="btn btn-success" href="">Edit</a>
                        <a class="btn btn-danger" href="">Delete</a>
                    </div>
                }
            }
            <div>
                @* for partial add Comment *@
            </div>
        }
    }